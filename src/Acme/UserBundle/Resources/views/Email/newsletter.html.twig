<style>
    body {
        margin: 0;
        font-family: Georgia, "Times New Roman", Times, serif;
        font-size: 0.75em;
        line-height: 1.5em;
        color: 
        #5B4437;
        background-color: 
        #E1E6E7;
    }
    .entry {
width:540px;padding:20px;margin-left:20px;margin-top:20px;clear: left;background-color: white;border-radius: 3px;margin-bottom: 30px;-moz-box-shadow: 0px 15px 15px -10px #b0bdc0;-webkit-box-shadow: 0px 15px 15px -10px #B0BDC0;box-shadow: 0px 15px 15px -10px #B0BDC0;border: 1px solid #C6D0D2;
    }
    h1{
        clear:left;font-size: 1.5em;background-color: #506100;color: white;        padding: 10px 30px;        float: left;        margin-left:20px;        margin-top:20px;        border-radius: 5px;
    }
</style>

{% if locations|length >0 %}
<h1 style="        clear:left;font-size: 1.5em;background-color: #506100;color: white;        padding: 10px 30px;        float: left;        margin-left:20px;        margin-top:20px;        border-radius: 5px;">Επόμενες Αγορές</h1>

{% for location in locations %}
<div style="width:540px;padding:20px;margin-left:20px;margin-top:20px;clear: left;background-color: white;border-radius: 3px;margin-bottom: 30px;-moz-box-shadow: 0px 15px 15px -10px #b0bdc0;-webkit-box-shadow: 0px 15px 15px -10px #B0BDC0;box-shadow: 0px 15px 15px -10px #B0BDC0;border: 1px solid #C6D0D2;" class="entry">
    <h2> {{location.name}} - {{location.date|date("d-m-Y")}}</h2>
    <h3> Αγορά με {{ location.product }}</h3>
    <h3> {{ location.address }} - {{location.town}}</h3>

    <img src="http://maps.googleapis.com/maps/api/staticmap?center={{location.latitude}},{{location.longitude}}&zoom=14&size=500x200&sensor=false">
    <p> οργάνωση: {{ location.organiser }}
</div>
{% endfor %}
{% endif %}

{% if news | length >0 %}
<h1>Τα νέα μας </h1>
{% for new in news %}

<div class="entry">
    <h2>{{new.title }} - {{new.date|date("d-m-Y")}}</h2>
    <div>
        {{ new.content|raw }}
    </div>
</div>
{% endfor %}
{% endif %}
