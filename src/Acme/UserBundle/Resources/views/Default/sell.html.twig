{% extends "AcmeUserBundle:Default:base.html.twig" %}

{% block title %}

Εγγραφή νέου Αγρότη 
{% endblock %}


{% block content %}
<div class="row">
    <div class="twelve columns">
        <img style="position:relative;top:10px;" src="/images/backgroundarticle.png">
    </div>
</div>
<div class="row header">
<div class="twelve columns">
<h3> Προσθήκη Πώλησης </h3>
</div>
</div>
<div class="row article">
    <div class="six columns offset-by-one form">
        <form  action="{{ path('sell_new') }}" method="post"  class="nice">

            {{ form_errors(form) }}
            {{ form_row(form.quantity) }}
            {{ form_row(form.min_quantity) }}
            {{ form_row(form.price) }}
            {{ form_row(form.origin) }}
            {{ form_row(form.agor) }}
            <input type="submit" />
        </form>
    </div>
</div>
{% endblock %}

{% block sidebar %} 

<div class="row">
    <div class="twelve columns phone">
        
        <p> test sidebar content </p>
</div>
</div>
{% endblock %}