{% block title %} Τι έχω πουλήσει {% endblock %}
{% block content %}
<h1> Τι έχω πουλήσει</h1>
<div class="row">
    <div class="span9 listing">

{%for key in l%}
 <div class="span7">
                <div class="details">
                    <div class="groupinfo">
                        <dl class="info">
						<dt>Ημερομηνία:</dt><dd>{{key.date|date("d/m/Y")}}</dd>
						<dt>Ελάχιστη ποσότητα αγοράς:</dt><dd>{{key.min_quantity}} κιλά</dd>
						<dt>Προέλευση:</dt><dd>{{key.origin}} </dd>
						</dl>
						<dl class="info">
						<dt>Τόπος:</dt><dd>{{key.address}}</dd>
							<dt>Ποσότητα:</dt><dd> {{key.quantity}} κιλά</dd>
								<dt>Τιμή:</dt><dd>{{key.price}} ευρώ</dd>
											
					
				   </div>
            </div>
        </div>
			<div class="row">
			
                <div class="span9 buttons"><a class="btn btn-large" href="{{ path('edit')}}?id={{key.id}}">Επεξεργασία</a>
                 
            </div>						
		</div>	
{%endfor%}

</div>
