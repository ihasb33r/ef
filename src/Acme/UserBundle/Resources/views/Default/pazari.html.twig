{% extends "AcmeUserBundle:Default:base.html.twig" %}

{% block title %} Επόμενα Παζάρια {% endblock %}

{% block extracssjava %}
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAEPM5KnBooryeD7ln46Sa85Y7w9IencE0&sensor=false"></script>

<script type="text/javascript" src="{{asset('js/maps.js')}}"></script>
{% endblock %}

{% block content %}


{%for location in locat %}	
{% if ((location.date|date()) > ("now"|date())) %}
{%for prod in query%}
{% if prod.id == location.product.id%}
<div class="row ">
    <div class="span9 listing">
        <div class="row">
            <div class="span6">
                <h2><span>Παζάρι με:</span> {{prod.name}}</h2>
            </div>
            <div class="span3">
                <h3>{{location.date|date("d/m/Y")}}</h3>
            </div>
        </div>
        <div class="row">
            <div class="span4" >
                <div class="details">
                    <img class="product" src="{{ asset (prod.image)}}">
                    <dl>
                        <dt>Οργανωτής</dt>
                        <dd>{{location.organiser}}</dd>

                        <dt>Τοποθεσία</dt> <dd>{{ location.name }}</dd>
                        <dt>Διεύθυνση</dt><dd> {{ location.address}} </dd>
                    </dl>
                </div>
            </div>
            <div class="span5">
                <div class="imgmap">
                    <div class="map" id="#map{{location.id}}"></div>
                </div>
            </div>
        </div>
        <script>	
            addmap("#map{{location.id}}", {{location.latitude}}, {{location.longitude}}, "{{location.address}}");
        </script>
        <div class="row">
            <div class="span9 buttons"><a class="btn btn-large" href="{{ path('buy')}}">Προβολή προσφορών</a>
                <a class="btn btn-large" href="{{ path('sell')}}">Συμμετοχή ως αγρότης</a></div>
        </div>
    </div>
</div>

{%endif%}
{% endfor %}
{%endif%}
{% endfor %}
{% endblock %}


{% block sidebar %}
<div class="row ">
    <div class="span3 sidebar">
        <ul class="extra-nav">

            <li><a href="pazari" >Αρχική</a></li>
            <li><a href="profile">Προφίλ</a></li>
            <li><a href="price">Τιμοκατάλογος</a></li>
            <li><a href="logout">Αποσύνδεση</a></li>

        </ul>
    </div>
</div>
</div>{%endblock %}
