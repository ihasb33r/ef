<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{% block title %} {% endblock %}- eAgrotis.gr</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="araksia, ihasb33r">

        <!-- Le styles -->
        <link href={{ asset('css/bootstrap.css')}} rel="stylesheet">
        <link href={{ asset('css/my.css')}} rel="stylesheet">
        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        <!-- Le fav and touch icons -->
        <script src={{ asset('js/jquery-1.7.2.min.js')}} ></script>
        <link rel="shortcut icon" href={{ asset("ico/favicon.ico")}}>
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../assets/ico/apple-touch-icon-144-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/ico/apple-touch-icon-114-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/ico/apple-touch-icon-72-precomposed.png">
        <link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png">
        <link href='http://fonts.googleapis.com/css?family=Comfortaa:400,300,700&subset=latin,greek' rel='stylesheet' type='text/css'>
        {% block extracssjava %}
        {% endblock %}
    </head>

    <body>
        <div class="container top">

            <div class="row">
                <div class="span3 logo">

                    <a href="{{path("home")}}">
                        <img src="{{ asset('img/logo.png')}}">
                    </a>
                </div>
                <div class="span6 hidden-phone">
                    <ul id="main" class="nav">
                        <li>
                        <a href="{{path("home")}}">Αρχικη</a>
                        </li>
                        <li>
                        <a href="{{path("diorganotis")}}">Είμαι Διοργανωτής</a>
                        </li>
                        <li>
                        <a href="{{path("agrotis")}}">Είμαι Αγρότης</a>
                        </li>
                        <li>
                        <a href="{{path("user")}}">Είμαι Καταναλωτής</a>
                        </li>
                        <li>
                        <a href="{{path("business")}}">Είμαι Επιχείρηση</a>
                        </li>
                        <li>
                        <a href="{{path("vindex")}}">Θέλω να Βοηθήσω</a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="span3 phone hidden-phone">
                    <div>
                        <ul id="login" class="loginbox">
                            {% if is_granted("ROLE_ADMIN") %}
                            <li>
                            <a href="{{path("admin")}}">Διαχείριση</a>
                            </li>
                            {% endif %}
                            {% if is_granted("ROLE_USER") %}
                            <li>
                            <a href="{{path("fos_user_security_logout")}}">Αποσύνδεση</a>
                            </li>
                            {% else %}
                            <li>
                            <a href="{{path("fos_user_security_login")}}">Σύνδεση</a>
                            </li>
                            <li>
                            <a href="{{path("fos_user_registration_register")}}">Εγγραφή</a>
                            </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row visible-phone">
                <div class="span12">
                <select id="navigation" style="width:100%;">
                    <option value="/"> Επιλέξτε που θέλετε να πάτε </test>
                    <optgroup class="main" label="Κεντρικό Μενού">
                    </optgroup>
                    <optgroup class="actions" label="Επιλογές Χρήστη">
                    </optgroup>
                    <optgroup class="productcategories" label="Κατηγορίες Προιόντων">
                    </optgroup>
                    <optgroup class="information" label="Πληροφορίες">
                    </optgroup>
                    <optgroup class="login" label="Χρήστης">
                    </optgroup>
                </select>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="span9">
                    <div class="row">
                        <div class="span9">
                            <div style="background-color:#D6DDDF; height:100px;margin-bottom:20px;"><p style="text-align:center; color:black;padding-top:40px; margin-top:20px;">Διαφημιση</p></div>
                        </div>
                    </div>
                    {% block content %} {% endblock %}
                </div>
				
                <div class="span3 hidden-phone">
                    <div class="row">
                        <div class="span3">
                            <div class="newsletter">
                                <h4>Newsletter</h4>
                                <form action="{{path('newsletter')}}" method="POST">
                                    <input type="text" name="email"></text>
                                    <input name="submit" value="Εγγραφή" type="submit" class="btn btn-large btn-green"/>
                                </form>
                            </div>
                        </div>
                    </div>
                <div class="row">
                    <div class="span3 social-icons">
                        <a href="http://www.facebook.com/pages/E-agrotis/384657824924546"><img alt=""  src="{{ asset('img/facebook.png')}}" hspace="3"   /></a>
                        <a href="https://twitter.com/#!/eagrotis"><img alt=""  src="{{ asset('img/twitter.png')}}"  hspace="3"/></a>
                        <a href="http://e-agrotis.blogspot.gr/"><img alt=""  src="{{ asset('img/blogger.png')}}" hspace="3" /></a>
                        <a href="http://www.youtube.com/user/eagrotis?feature=guide"><img alt=""  src="{{ asset('img/youtube.png')}}" hspace="3" /></a>
                    </div>
                </div>
                    {% block sidebar %} {%endblock %}
                </div>
            </div>
        </div>
        <script src={{ asset('js/bootstrap.min.js')}}></script>
        <script src={{ asset('js/menu.js')}}></script>
    </body>
</html>
