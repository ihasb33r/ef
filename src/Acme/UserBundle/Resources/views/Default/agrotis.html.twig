{% form_theme form 'AcmeTaskBundle:Form:fields.html.twig' %}

{% extends "AcmeTaskBundle:Default:base.html.twig" %}

{% block title %}
Εγγραφή νέου Αγρότη 
{% endblock %}


{% block content %}
<div class="row">
    <div class="twelve columns">
        <img style="position:relative;top:10px;" src="/images/backgroundarticle.png">
    </div>
</div>
<div class="row header">
<div class="twelve columns">
<h3> Εγγραφή νέου αγρότη </h3>
</div>
</div>
<div class="row article">
    <div class="six columns offset-by-one form">
        <form  action="{{ path('agrotis_new') }}" method="post" {{ form_enctype(form) }} class="nice">

            {{ form_errors(form) }}
            {{ form_row(form.username) }}
            {{ form_row(form.password) }}
            {{ form_row(form.name) }}
            {{ form_row(form.surname) }}
            {{ form_row(form.phone) }}
            {{ form_row(form.email) }}
            {{ form_rest(form) }}
            <input type="submit" />
        </form>
    </div>
</div>
{% endblock %}

{% block sidebar %} 

<div class="row">
    <div class="twelve columns phone">
        
        <p> test sidebar content </p>
</div>
</div>
{% endblock %}

