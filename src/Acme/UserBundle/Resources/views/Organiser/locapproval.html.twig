{% extends "AcmeUserBundle:Default:base.html.twig" %}
{% block title %}
Τύχη Συναντήσεων

{% endblock %}
{% block content %}
<div class="row">
    <div class="span9">

        <h1> Εγκρίσεις προσφορών</h1>  </div>
</div>

{%for location in items%}
<div class="row ">
    <div class="span9 listing">
        <div class="row">
            <div class="span5 title">
                <h2>
                    {{location.name }}
                </h2>
            </div>
            <div class="span4 title">
                <h3>
                    {{location.date| date("d/m/Y")                    }}
                </h3>
            </div>
        </div>
        <div class="row">
            <div class="span3" >
                <div class="details photo">
                    <img class="product" src="{{ asset (location.product.image)}}">
                </div>
            </div>
            <div class="span6">
               
                <div class="row">
                    <div class="span6 buttons">
                        {% if location.approved==false %}
						<p>Η συνάντηση έχει απορριφθεί</p>
                    
                        {% endif %}
                        {% if location.approved==true %}
						
						<p>Η συνάντηση έχει εγκριθεί</p>
						{% if location.public==false %}
                        <a class="btn btn-large" href="{{ path('public', { 'id': location.id}) }}">Δημοσίευση</a>
                        {% else%}  
						<p>Η συνάντηση έχει δημοσιευτεί</p>
						{% endif %}{% endif %}
						 {% if location.approved is null%}
                        <p> Αναμένεται έγκιρση</p>
                        {% endif %}
                    </div>
                </div>			
            </div>	
        </div>
    </div>
</div>

{%endfor%}

{%endblock %}
{% block sidebar %}
{% include "AcmeUserBundle:Organiser:sidebar_organiser.html.twig" %}
{%endblock %}
